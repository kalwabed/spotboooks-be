generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Books {
  id          String   @unique() @default(cuid())
  title       String
  writer      String
  cover_image String
  point       Int
  tags        String[]
}

model Members {
  id       String @unique() @default(cuid())
  username String
  point    Int    @default(200)
}
